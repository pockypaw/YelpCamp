<% layout('layouts/boilerplate')%>
<ul>
  <% for(let campground of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <!-- Check if image URL exists and fall back to a placeholder if not -->
        <img
          src="<%= campground.images.length > 0 ? campground.images[0].url : '/path/to/placeholder.jpg' %>"
          alt="Campground Image"
          class="img-fluid"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>

          <p class="card-text">
            <small class="text-muted"><%= campground.location %></small>
          </p>
          <p class="card-text">
            <%= campground.description %> Lorem ipsum dolor, sit amet
            consectetur adipisicing elit. Suscipit quia eius numquam qui
            praesentium commodi sit aperiam quidem. Omnis eligendi porro, ipsam
            fugiat dolorem quam provident cupiditate excepturi aliquid quis.
          </p>
          <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">
            Read More
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
</script>
